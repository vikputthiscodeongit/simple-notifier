{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["ES2017", "DOM"],
        "module": "ES2015",
        "moduleResolution": "bundler",
        "outDir": "dist/js",
        "allowImportingTsExtensions": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/**/*"]
}
