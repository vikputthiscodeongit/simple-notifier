{
  "name": "@codebundlesbyvik/simple-notifier",
  "version": "1.1.3-fix-readme",
  "description": "A lightweight, easy to use notification library.",
  "keywords": [
    "es6",
    "small",
    "lightweight",
    "modern",
    "simple",
    "easy",
    "notifier",
    "notification",
    "alert",
    "toast",
    "banner",
    "info",
    "information",
    "message"
  ],
  "license": "MPL-2.0",
  "author": "codebundlesbyvik",
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikputthiscodeongit/simple-notifier.git"
  },
  "bugs": "https://github.com/vikputthiscodeongit/simple-notifier/issues",
  "exports": {
    ".": {
      "style": "./dist/styles/simple-notifier.css",
      "sass": "./dist/styles/simple-notifier.scss",
      "module": "./dist/js/index.js",
      "default": "./dist/js/index.umd.js"
    }
  },
  "type": "module",
  "scripts": {
    "build": "webpack && tsc",
    "compile-css": "sass src/scss/simple-notifier.scss dist/simple-notifier.css --no-source-map",
    "compile-js": "babel src/ts/index.ts --out-dir dist/js --extensions .ts",
    "generate-types": "tsc",
    "lint": "eslint . src/ts/** --config .eslintrc.cjs",
    "lint-fix": "eslint . src/ts/** --config .eslintrc.cjs --fix",
    "make-bundle": "rollup --config rollup.config.js",
    "make-release": "cross-env NODE_ENV=production npm run lint-fix && rimraf dist && npm run generate-types && npm run compile-js && npm run make-bundle && npm run minify-js && npm run compile-css && npm run minify-css",
    "minify-css": "postcss dist/simple-notifier.css --replace --map --use cssnano",
    "minify-js": "terser dist/index.js --output dist/index.js --compress passes=2"
  },
  "dependencies": {
    "@codebundlesbyvik/js-helpers": "^1.0.0",
    "merge-options": "^3.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@tsconfig/recommended": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-webpack-plugin": "^4.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "sass-rem": "^3.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "browserslist": [
    "> 0.1% and fully supports async-functions"
  ]
}
