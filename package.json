{
  "name": "@codebundlesbyvik/simple-notifier",
  "version": "1.1.3-fix-readme",
  "description": "A lightweight, easy to use notification library.",
  "keywords": [
    "es6",
    "small",
    "lightweight",
    "modern",
    "simple",
    "easy",
    "notifier",
    "notification",
    "alert",
    "toast",
    "banner",
    "info",
    "information",
    "message"
  ],
  "license": "MPL-2.0",
  "author": "codebundlesbyvik",
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikputthiscodeongit/simple-notifier.git"
  },
  "bugs": "https://github.com/vikputthiscodeongit/simple-notifier/issues",
  "exports": {
    ".": {
      "module": "./dist/js/simple-notifier.js",
      "default": "./dist/js/simple-notifier.umd.js"
    }
  },
  "style": "./dist/css/simple-notifier.css",
  "sass": "./src/scss/simple-notifier.scss",
  "type": "module",
  "scripts": {
    "compile-css": "sass src/scss/simple-notifier.scss dist/css/simple-notifier.css --no-source-map && postcss dist/css/simple-notifier.css --replace --no-map --use autoprefixer",
    "compile-js": "babel src/ts/index.ts --out-dir dist/js --extensions .ts",
    "generate-types": "tsc",
    "lint": "eslint . src/ts/** --config .eslintrc.cjs",
    "lint-fix": "eslint . src/ts/** --config .eslintrc.cjs --fix",
    "make-bundle": "rollup --config rollup.config.js",
    "make-release": "cross-env NODE_ENV=production npm run lint-fix && rimraf dist && npm run generate-types && npm run compile-js && npm run make-bundle && npm run minify-js && npm run compile-css && npm run minify-css",
    "minify-css": "postcss dist/css/simple-notifier.css --replace --map --use cssnano",
    "minify-js": "terser dist/js/index.js --output dist/js/index.js --compress passes=2"
  },
  "dependencies": {
    "@codebundlesbyvik/js-helpers": "^1.0.0",
    "merge-options": "^3.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@tsconfig/recommended": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.3.0",
    "sass": "^1.69.5",
    "terser": "^5.24.0",
    "typescript": "^5.2.2"
  },
  "browserslist": [
    "> 0.1% and fully supports object-entries"
  ]
}
