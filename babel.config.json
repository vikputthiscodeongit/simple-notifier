{
    "sourceType": "module",

    "env": {
        "esm": {
            "plugins": [ "babel-plugin-transform-remove-console" ],
            "presets": [
                [
                    "@babel/preset-env", {
                        "modules": false
                    }
                ]
            ]
        },

        "bundle": {
            "plugins": [
                "babel-plugin-transform-remove-console",
                "@babel/plugin-proposal-class-properties"
            ]
        }
    }
}
